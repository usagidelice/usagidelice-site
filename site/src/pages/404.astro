---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Page introuvable — Usagi Délice";
const description = "La page demandée n’existe pas (ou a été déplacée). Revenez à l’accueil ou consultez nos prochaines dates.";
---

<BaseLayout title={title} description={description}>
  <main class="wrap">
    <section class="panel">
      <p class="kicker">Erreur 404</p>
      <h1>Page introuvable.</h1>
      <p class="lead">
        Désolé, la page que vous cherchez n’existe pas (ou a été déplacée).
      </p>

      <div class="actions">
        <a class="btn primary" href="/">Retour à l’accueil</a>
        <a class="btn ghost" href="/evenements">Voir nos prochaines dates</a>
        <a class="btn ghost" href="/contact">Nous contacter</a>
      </div>

      <div class="tips">
        <p class="muted">
          Astuce : vérifiez l’URL, ou utilisez la navigation en haut de page.
        </p>
      </div>
    </section>

    <section class="mini">
      <div class="mini-card">
        <h2>Où nous trouver</h2>
        <p class="muted">
          Nous sommes souvent sur les marchés et festivals à Paris & Île-de-France.
        </p>
        <a class="textlink" href="/evenements#prochaines-dates">Prochaines dates →</a>
      </div>

      <div class="mini-card">
        <h2>Références</h2>
        <p class="muted">
          Découvrez nos collaborations et événements passés.
        </p>
        <a class="textlink" href="/references">Voir Références →</a>
      </div>
    </section>
  </main>

  <style>
    .wrap{
      padding: calc(var(--header-h, 72px) + 28px) 0 64px;
    }
    .panel{
      max-width: 820px;
      margin: 0 auto;
      padding: 26px 22px;
      border-radius: 22px;
      background: rgba(255, 247, 239, 0.78);
      border: 1px solid rgba(42, 31, 31, 0.10);
      box-shadow: 0 22px 60px rgba(42, 31, 31, 0.12);
      backdrop-filter: blur(10px);
    }
    .kicker{
      display:inline-block;
      font-weight: 900;
      letter-spacing: .02em;
      color: rgba(42, 31, 31, 0.70);
      margin: 0 0 10px;
    }
    h1{
      margin: 0 0 10px;
      letter-spacing: -0.02em;
      line-height: 1.06;
    }
    .lead{
      margin: 0 0 18px;
      color: rgba(42, 31, 31, 0.78);
      font-size: clamp(1.02rem, 0.9rem + 0.5vw, 1.15rem);
      line-height: 1.55;
    }
    .actions{
      display:flex;
      gap: 10px;
      flex-wrap: wrap;
      margin: 16px 0 8px;
    }
    .btn{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      padding: 10px 14px;
      border-radius: 999px;
      font-weight: 900;
      text-decoration: none;
      border: 1px solid rgba(42, 31, 31, 0.14);
      background: rgba(255,255,255,0.35);
      color: var(--ink, #2a1f1f);
    }
    .btn.primary{
      background: var(--red, #c23b32);
      border-color: rgba(0,0,0,0.0);
      color: white;
    }
    .btn.primary:hover{ filter: brightness(0.98); }
    .btn.ghost:hover{ background: rgba(255,255,255,0.5); }

    .tips{ margin-top: 8px; }
    .muted{ color: rgba(42, 31, 31, 0.62); }

    .mini{
      max-width: 820px;
      margin: 16px auto 0;
      display: grid;
      grid-template-columns: 1fr;
      gap: 12px;
    }
    .mini-card{
      padding: 16px 18px;
      border-radius: 18px;
      background: rgba(255, 247, 239, 0.66);
      border: 1px solid rgba(42, 31, 31, 0.08);
      backdrop-filter: blur(10px);
    }
    .mini-card h2{
      margin: 0 0 6px;
      font-size: 1.05rem;
      letter-spacing: -0.01em;
    }
    .textlink{
      display:inline-flex;
      margin-top: 8px;
      font-weight: 900;
      text-decoration: none;
      color: var(--red, #c23b32);
    }
    .textlink:hover{ text-decoration: underline; }

    @media (min-width: 860px){
      .mini{ grid-template-columns: 1fr 1fr; }
      .panel{ padding: 30px 28px; }
    }
  </style>
</BaseLayout>
