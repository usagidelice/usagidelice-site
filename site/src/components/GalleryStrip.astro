---
import Reveal from "./Reveal.astro";

const images = Astro.props.images ?? [
  "/gallery/1.webp",
  "/gallery/2.webp",
  "/gallery/3.webp",
  "/gallery/4.webp",
  "/gallery/5.webp",
  "/gallery/6.webp",
  "/gallery/7.webp",
  "/gallery/8.webp",
];

const title = Astro.props.title ?? "Galerie";
const description =
  Astro.props.description ??
  "Des marchés parisiens aux festivals — le stand, la cuisson, et les takoyaki tout juste sortis des plaques.";

const cta = Astro.props.cta ?? {
  label: "Voir sur Instagram",
  href: "https://www.instagram.com/usagidelice/",
};
---

<section class="wrap">
  <div class="inner">
    <Reveal>
      <div class="head">
        <div class="head-left">
          <h2 class="t">{title}</h2>
          <p class="p">{description}</p>
        </div>

        <a class="cta" href={cta.href} target="_blank" rel="noreferrer">
          {cta.label}
        </a>
      </div>
    </Reveal>

    <Reveal delay={120}>
      <div class="strip card">
        <div class="track" aria-label="Galerie Usagi Délice">
          {
            [...images, ...images].map((src) => (
              <a
                class="frame"
                href={src}
                target="_blank"
                rel="noreferrer"
                aria-label="Ouvrir la photo"
              >
                <img
                  src={src}
                  alt="Photo Usagi Délice"
                  loading="lazy"
                  decoding="async"
                />
                <span class="shade" aria-hidden="true" />
              </a>
            ))
          }
        </div>
      </div>
    </Reveal>
  </div>

  <style>
    .wrap {
      padding: 3.2rem 1.1rem;
    }
    .inner {
      max-width: 1140px;
      margin: 0 auto;
    }

    /* Header：左文字右 CTA（更像活动官网模块） */
    .head {
      display: flex;
      gap: 1rem;
      align-items: flex-end;
      justify-content: space-between;
      margin-bottom: 1.2rem;
    }
    .head-left {
      min-width: 0;
    }
    .t {
      margin: 0;
      font-size: 1.9rem;
      letter-spacing: 0.01em;
    }
    .p {
      margin: 0.55rem 0 0;
      color: rgba(29, 29, 31, 0.74);
      max-width: 74ch;
    }
    .cta {
      flex: 0 0 auto;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1rem;
      border-radius: 999px;
      text-decoration: none;
      font-weight: 850;
      border: 1px solid rgba(194, 59, 50, 0.25);
      background: rgba(246, 235, 221, 0.65);
      color: rgba(194, 59, 50, 0.95);
      box-shadow: 0 12px 30px rgba(29, 29, 31, 0.08);
      transition:
        transform 0.2s ease,
        box-shadow 0.2s ease;
      white-space: nowrap;
    }
    .cta:hover {
      transform: translateY(-2px);
      box-shadow: 0 18px 44px rgba(29, 29, 31, 0.12);
    }

    /* ===== 关键：Gallery 变整屏视觉 ===== */
    .strip {
      overflow: hidden;
      padding: 1rem;
      height: 70vh; /* 桌面整屏感 */
      min-height: 460px;
      border-radius: 22px;
      position: relative;

      /* 边缘渐隐（更高级的“胶片感”） */
      -webkit-mask-image: linear-gradient(
        to right,
        transparent 0%,
        #000 7%,
        #000 93%,
        transparent 100%
      );
      mask-image: linear-gradient(
        to right,
        transparent 0%,
        #000 7%,
        #000 93%,
        transparent 100%
      );
    }

    .track {
      display: flex;
      gap: 1rem;
      height: 100%;
      animation: slide 32s linear infinite;
      will-change: transform;
      align-items: stretch;
    }

    /* 每张图：更大、更像海报 */
    .frame {
      flex: 0 0 auto;
      width: clamp(320px, 42vw, 560px);
      height: 100%;
      border-radius: 18px;
      overflow: hidden;
      border: 1px solid rgba(194, 59, 50, 0.22);
      box-shadow: 0 18px 55px rgba(29, 29, 31, 0.12);
      transform: translateZ(0);
      position: relative;
      background: rgba(246, 235, 221, 0.4);
    }

    .frame img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.35s ease;
      transform: scale(1.02);
    }

    /* 悬停更有冲击：轻放大 + 暗角出现 */
    .shade {
      position: absolute;
      inset: 0;
      background: radial-gradient(
        800px 500px at 30% 20%,
        rgba(0, 0, 0, 0.05),
        rgba(0, 0, 0, 0.35)
      );
      opacity: 0.12;
      transition: opacity 0.35s ease;
    }

    .frame:hover img {
      transform: scale(1.08);
    }
    .frame:hover .shade {
      opacity: 0.22;
    }

    @keyframes slide {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(-50%);
      }
    }

    @media (max-width: 900px) {
      .head {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
      }

      .strip {
        height: 60vh;
        min-height: 380px;
        -webkit-mask-image: none;
        mask-image: none;
      }

      .frame {
        width: clamp(260px, 78vw, 520px);
      }

      .track {
        animation-duration: 36s; /* 手机上慢一点更舒服 */
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .track {
        animation: none;
      }
      .frame:hover img {
        transform: none;
      }
      .frame:hover .shade {
        opacity: 0.12;
      }
    }
  </style>
</section>
